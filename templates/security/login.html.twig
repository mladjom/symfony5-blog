{% extends 'base.html.twig' %}

{% block title %}{{ 'title.sign_in'|trans }}{% endblock %}

{% block body %}
    <main class="col-md-12">
        <div class="row justify-content-center">
            <div class="col-md-6">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                <h1 class="page-title text-center mb-5">{{ 'title.sign_in'|trans }}</h1>
                <form method="post" class="login">
                    <div class="input-group mb-3">
                        <div class="input-group-append">
                            <span class="input-group-text"><i class="icon-user icons"></i></span>
                        </div>
                        <input type="email" value="{{ last_username }}" name="email" id="inputEmail"
                               placeholder="{{ 'placeholder.email'|trans }}" class="form-control"
                               required autofocus>
                    </div>

                    <div class="input-group mb-2">
                        <div class="input-group-append">
                            <span class="input-group-text"><i class="icon-key icons"></i></span>
                        </div>
                        <input type="password" name="password" id="inputPassword"
                               placeholder="{{ 'placeholder.password'|trans }}" class="form-control" required>
                    </div>
                    <input type="hidden" name="_csrf_token"
                           value="{{ csrf_token('authenticate') }}">

                    <div class="form-check mb-3">
                        <input type="checkbox" class="form-check-input" id="remember_me" name="_remember_me">
                        <label class="form-check-label" for="exampleCheck1">{{ 'label.remember_me'|trans }}</label>
                    </div>

                    <div class="d-flex justify-content-center mt-3 login_container">
                        <button class="btn btn-custom btn-block mt-3" type="submit">
                            {{ 'action.sign_in'|trans }}
                        </button>
                    </div>
                    <div class="mt-4">
                        <div class="d-flex justify-content-center links">
                            {{ 'action.no_account'|trans }}
                            <a href="{{ path('app_register') }}" class="ml-2">
                                {{ 'menu.register'|trans }}
                            </a>
                        </div>
                        <div class="d-flex justify-content-center links">
                            <a href="{{ path('app_forgot_password_request') }}">
                                {{ 'action.forgot_password'|trans }}
                            </a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </main>
{% endblock %}
