{% extends 'base.html.twig' %}

{% block title %}{{ user.name }} - {{ 'Change Password'|trans }}{% endblock %}

{% block main %}
    <h1 class="page-title text-center mb-5">{{ 'Change Password'|trans }}</h1>
    <div class="alert alert-info" role="alert">{{ 'info.change_password'|trans }}</div>
    {{ form_start(form) }}
    {{ form_widget(form) }}
    <button type="submit" class="btn btn-custom btn-block mt-3">
        {{ 'Save'|trans }}
    </button>
    {{ form_end(form) }}
{% endblock %}
{% block sidebar %}

    {% include('profile/_widget.html.twig') %}

    {{ parent() }}

{% endblock %}
