<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>{% block title %}Welcome!{% endblock %}</title>
    <link rel="alternate" type="application/rss+xml" title="{{ 'rss.title'|trans }}" href="{{ path('article_rss') }}">
    {% block stylesheets %}
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
              integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z"
              crossorigin="anonymous">
        <link href="https://fonts.googleapis.com/css2?family=Lora:wght@400;500;600;700&family=Mukta+Mahee:wght@400;500;600;700&display=swap"
              rel="stylesheet">
        <link href="{{ asset('assets/css/style.css') }}" rel="stylesheet">
        <link href="{{ asset('assets/css/simple-line-icons.css') }}" rel="stylesheet">
        {{ encore_entry_link_tags('app') }}
        {{ encore_entry_link_tags('search') }}
    {% endblock %}
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}"/>
</head>
<body class="{% block body_id %}{% endblock %}">
{% block header %}
    <header id="topnav">
        <div class="container">
            <a href="{{ path('article_index') }}" class="navbar-brand">Symfony 5 Blog</a>
            <div class="menu-extras">
                <div class="menu-item">
                    <!-- Mobile menu toggle-->
                    <a class="navbar-toggle">
                        <div class="lines">
                            <span></span>
                            <span></span>
                            <span></span>
                        </div>
                    </a>
                    <!-- End mobile menu toggle-->
                </div>
            </div>
            <nav id="navigation">
                <!-- Navigation Menu-->
                <ul class="navigation-menu">
                    {% block header_navigation_links %}
                        <li>
                            <a href="{{ path('article_index') }}">
                                {{ 'menu.homepage'|trans }}
                            </a>
                        </li>
                        <li class="has-submenu">
                            <a href="{{ path('article_index') }}">
                                {{ 'menu.articles'|trans }}
                            </a>
                            <span class="menu-arrow"></span>
                            <ul class="submenu">
                                <li>
                                    <a href="{{ path('article_index') }}">
                                        {{ 'menu.categories'|trans }}
                                    </a>
                                </li>
                                <li>
                                    <a href="{{ path('article_index') }}">
                                        {{ 'menu.tags'|trans }}
                                    </a>
                                </li>
                            </ul>
                        </li>
                        {% if app.user %}
                            <li class="has-submenu">
                                <a href="#">
                                    {{ 'message.hello'|trans }} {{ app.user.name }}
                                </a>
                                <span class="menu-arrow"></span>
                                <ul class="submenu">
                                    {% if is_granted('ROLE_ADMIN') %}
                                        <li>
                                            <a href="{{ path('admin') }}">
                                                <i class="icon-speedometer icons" aria-hidden="true"></i>  {{ 'menu.admin'|trans }}
                                            </a>
                                        </li>
                                    {% endif %}
                                    <li>
                                        <a href="{{ path('user_edit') }}">
                                            <i class="icon-user icons" aria-hidden="true"></i> {{ 'menu.user'|trans }}
                                        </a>
                                    </li>
                                    <li>
                                        <a href="{{ path('app_logout') }}">
                                            <i class="icon-logout icons" aria-hidden="true"></i> {{ 'menu.logout'|trans }}
                                        </a>
                                    </li>
                                </ul>
                            </li>
                        {% else %}
                            <li>
                                <a href="{{ path('app_login') }}">
                                    <i class="icon-login icons" aria-hidden="true"></i> {{ 'menu.sign_in'|trans }}
                                </a>
                            </li>
                            <li>
                                <a href="{{ path('app_register') }}">
                                    <i class="icon-user-following icons" aria-hidden="true"></i> {{ 'menu.register'|trans }}
                                </a>
                            </li>
                        {% endif %}
                    {% endblock %}
                </ul>
                <!-- End navigation menu-->
            </nav>
        </div>
    </header>
    <!-- End Navigation Bar-->
{% endblock %}
<div class="main-content">
    <div class="container">
        <div class="row">
            {% block body %}
            <div class="col-lg-8">
                {% block main %}
                {% endblock %}
            </div>
            <div class="col-lg-4">
{#                {% block sidebar %}#}
{#                            {{ dump(article) }}#}

{#                    {{ include('includes/_sidebar.twig') }}#}
{#                {% endblock %}#}
                {{ article_sidebar() }}
            </div>
            {% endblock %}
        </div>
    </div>
</div>
{% block footer %}
    <footer>
        <!-- copy-wrapper -->
        <div class="copy-wrapper">
            <div class="container">
                <p class="copyright text-center">Copyright Â© Playground 2020</p>
            </div>
        </div>
        <!-- end copy-wrapper -->
    </footer>
{% endblock %}
{% block javascripts %}
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"
            integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"
            integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN"
            crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"
            integrity="sha384-B4gt1jrGC7Jh4AgTPSdUtOBvfO8shuf57BaghqFfPlYxofvL8/KUEfYiJOMMV+rV"
            crossorigin="anonymous"></script>
    {{ encore_entry_script_tags('app') }}
{% endblock %}
</body>
</html>
